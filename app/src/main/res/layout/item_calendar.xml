<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/dictionary_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/recycle_message_item"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="0dp">


<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:orientation="horizontal">-->


                <ImageView
                    android:id="@+id/image_plant_calendar"
                    android:layout_centerVertical="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="23dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/calendar_watering_plants_color" />

                <TextView
                        android:id="@+id/watered_date"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/image_plant_calendar"
                        android:text="watered_date"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp" />

                <TextView
                    android:id="@+id/watered_message"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="물을 주었습니다."
                    android:layout_toRightOf="@id/watered_date"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />


                <!--                </LinearLayout>-->


            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>