    <ImageView
        android:id="@+id/speech_box"
        android:layout_width="256dp"
        android:layout_height="94dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_speech_box" />

    <TextView
        android:id="@+id/speech_box_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/speech_box"
        android:layout_alignTop="@id/speech_box"
        android:layout_alignRight="@id/speech_box"
        android:layout_alignBottom="@id/speech_box"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-3dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:text="ddddddddddd"
        android:gravity="center" />

    <TextView
        android:id="@+id/plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_account_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="우리 장미"
        android:textColor="@color/colorBlack"
        android:textSize="27dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/plant_type"
        android:layout_below="@id/plant_name"
        android:layout_marginLeft="5dp"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignLeft="@id/plant_name"
        android:layout_alignRight="@id/plant_name"
        android:text="장미(Rose)"/>

