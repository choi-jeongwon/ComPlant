        android:layout_marginBottom="0dp"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
